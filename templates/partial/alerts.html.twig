{% for type in ['danger', 'success', 'warning', 'info'] %}
    {% for messages in app.flashes([type]) %}
        {% if messages is not empty %}
            <div class="alert alert-{{ type }} alert-dismissible fade show mt-5">
                {% for flash in messages %}
                    <p>{{ flash }}</p>
                {% endfor %}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'generic.close'|trans }}"></button>
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}
